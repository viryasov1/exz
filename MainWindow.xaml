<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="GenerateButton" Content="Сгенерировать массив" Click="GenerateButton_Click" Margin="10" Width="200"/>
            <Button x:Name="FindMaxButton" Content="Найти максимальный элемент" Click="FindMaxButton_Click" Margin="10" Width="200" IsEnabled="False"/>
            <Label x:Name="ArrayLabel" Content="" Margin="5"/>
            <Label x:Name="ResultLabel" Content="" Margin="5"/>
            <Label x:Name="IndexLabel" Content="" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
